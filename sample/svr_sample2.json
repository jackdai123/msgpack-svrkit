{
	"app": "echo",

	"protos": [{
		"name": "echomsg",
		"fields": [{
			"name": "value",
			"type": "string"
		}]
	}],

	"rpc_client": {
		"mode": "hashring"
	},

	"rpc_server": {
		"ip": "0.0.0.0",
		"port": 3000,
		"worker_type": "thread",
		"worker_sum": 4,
		"apis": [{
			"name": "echo",
			"args": [{
				"name": "msg",
				"type": "echomsg"
			}],
			"ret": true
		}]
	},

	"self_server": {
		"dispatch_type": "custom",
		"worker_type": "process",
		"groups" : [{
			"group_name": "event",
			"worker_sum": 2
		},{
			"group_name": "value",
			"worker_sum": 2
		}]
	}
}
